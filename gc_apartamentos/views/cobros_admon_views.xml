<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Actions and Views for Cobros de Administración -->


        <record id="view_gc_cobros_admon_tree" model="ir.ui.view">
            <field name="name">gc.cobros_admon.list</field>
            <field name="model">gc.cobros_admon</field>
            <field name="arch" type="xml">
                <list string="Cobros de Administración">
                    <field name="fecha_cobro"/>
                    <field name="numero_apartamento_id"/>
                    <field name="producto_id"/>
                    <field name="monto_pago" widget="monetary"/>
                </list>
            </field>
        </record>

        <record id="view_gc_cobros_admon_form" model="ir.ui.view">
            <field name="name">gc.cobros_admon.form</field>
            <field name="model">gc.cobros_admon</field>
            <field name="arch" type="xml">
                <form string="Cobro Administración">
                    <sheet>
                        <group>
                            <field name="fecha_cobro"/>
                            <field name="numero_apartamento_id"/>
                            <field name="producto_id"/>
                            <field name="monto_pago" widget="monetary"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Menu item is provided via conceptos_views.xml as a submenu under Apartamentos -->

    </data>
</odoo>
