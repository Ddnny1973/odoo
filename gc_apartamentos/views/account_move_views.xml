<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Heredar vista de formulario de factura para añadir campos de apartamento -->
        <record id="view_move_form_inherit_apartamento" model="ir.ui.view">
            <field name="name">account.move.form.inherit.apartamento</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                
                <!-- Añadir campos de apartamento después del partner_shipping_id -->
                <xpath expr="//field[@name='partner_shipping_id']" position="after">
                    <field name="apartamento_id" 
                           invisible="move_type not in ('out_invoice', 'out_refund')"
                           options="{'no_create': True, 'no_open': True}"
                           placeholder="Seleccione un apartamento..."
                           readonly="state != 'draft'"/>
                    <field name="propietarios_adicionales_ids" 
                           widget="many2many_tags"
                           invisible="not propietarios_adicionales_ids or move_type not in ('out_invoice', 'out_refund')"
                           options="{'no_create': True}"
                           readonly="1"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
